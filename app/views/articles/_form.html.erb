<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors' %>
      <%# <%= form_with scope: :article, url: articles_path, local: true do | f | %>
      <%= form_with model: @article, class: "shadow p-3 mb-3 rounded bg-info", data: { turbo: false }, local: true do | f | %>
        <div class="row mb-3">
          <%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article..." %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow", placeholder: "Description of article..." %>
          </div>
        </div>
        
        <div class="row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg w-auto" %>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "link-info link-underline-opacity-0 link-underline-opacity-100-hover"%>
    </div>
  </div>
</div>