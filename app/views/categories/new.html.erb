<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with model: @category, class: "shadow p-3 mb-3 rounded bg-info", data: { turbo: false }, local: true do | f | %>
        <div class="row mb-3">
          <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name..." %>
          </div>
        </div>
        
        <div class="row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg w-auto" %>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "link-info link-underline-opacity-0 link-underline-opacity-100-hover"%>
    </div>
  </div>
</div>