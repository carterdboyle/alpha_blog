<h1 class="text-center mt-4">Categories</h1>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<% @categories.each do |category|%>
  <div class="row justify-content-center">
    <div class="col-4 mt-4">
      <div class="card text-center shadow rounded mb-5">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category, class: "link-success link-underline-opacity-0 link-underline-opacity-100-hover" %></h5>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>               
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>